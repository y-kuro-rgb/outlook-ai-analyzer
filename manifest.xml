<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appshere/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" 
           xsi:type="MailApp">
  
  <Id>ae654321-1234-4321-abcd-ef9876543210</Id>
  <Version>1.0.0.8</Version>
  <ProviderName>AI Security Lab</ProviderName>
  <DefaultLocale>ja-JP</DefaultLocale>
  <DisplayName DefaultValue="AI Email Guardian Pro" />
  <Description DefaultValue="AIによるメールセキュリティ解析ツール" />
  
  <IconUrl DefaultValue="https://cdn-icons-png.flaticon.com/512/2092/2092663.png" />
  <HighResolutionIconUrl DefaultValue="https://cdn-icons-png.flaticon.com/512/2092/2092663.png" />

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
         <SourceLocation DefaultValue="https://y-kuro-rgb.github.io/outlook-ai-analyzer/taskpane.html" />
        <SourceLocation DefaultValue="https://YOUR_GITHUB_PAGES_URL/taskpane.html" />
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="And">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="VersionOverridesV1_0">
    <Description resid="residDescription" />
    <Requirements>
      <bt:Sets DefaultMinVersion="1.1">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="Mailbox">
        <DesktopFormFactor>
          <FunctionFile resid="residBaseUrl" />
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="residGroupName" />
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="residButtonLabel" />
                  <Supertip>
                    <Title resid="residButtonLabel" />
                    <Description resid="residDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16" />
                    <bt:Image size="32" resid="icon32" />
                    <bt:Image size="80" resid="icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="residBaseUrl" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="icon16" resid="icon16" />
        <bt:Image id="icon32" resid="icon32" />
        <bt:Image id="icon80" resid="icon80" />
      </bt:Images>
      <bt:Urls>
        <SourceLocation DefaultValue="https://y-kuro-rgb.github.io/outlook-ai-analyzer/taskpane.html" />
        <bt:Url id="residBaseUrl" DefaultValue="https://YOUR_GITHUB_PAGES_URL/taskpane.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:ShortString id="residGroupName" DefaultValue="AI Security" />
        <bt:ShortString id="residButtonLabel" DefaultValue="AI分析" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:LongString id="residDescription" DefaultValue="AI Email Guardian Proを起動してメールの安全性を診断します" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
